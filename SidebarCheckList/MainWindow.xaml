<Window x:Class="SidebarChecklist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Sidebar Checklist"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        Topmost="True"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">

    <Window.Resources>
        <sys:Double x:Key="ChecklistFontSize">14</sys:Double>
        <sys:Double x:Key="ChecklistCheckboxSize">16</sys:Double>

        <Style x:Key="ChecklistCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <BulletDecorator Background="Transparent" SnapsToDevicePixels="True">
                            <BulletDecorator.Bullet>
                                <Grid Width="{DynamicResource ChecklistCheckboxSize}"
                                      Height="{DynamicResource ChecklistCheckboxSize}">
                                    <Border x:Name="Box"
                                            BorderBrush="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                            BorderThickness="1"
                                            Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                                            CornerRadius="2"/>
                                    <Path x:Name="CheckMark"
                                          Data="M 2 6 L 5 9 L 10 3"
                                          Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                          StrokeThickness="2"
                                          Stretch="Uniform"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Visibility="Collapsed"/>
                                </Grid>
                            </BulletDecorator.Bullet>
                            <ContentPresenter Margin="8,0,0,0"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </BulletDecorator>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ヘッダ -->
            <Grid Margin="8,8,8,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ComboBox x:Name="ListCombo"
                          Grid.Column="0"
                          Width="220"
                          VerticalAlignment="Center"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          SelectionChanged="ListCombo_SelectionChanged"/>

                <TextBlock x:Name="VersionText"
                           Grid.Column="1"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                           FontSize="12"/>

                <StackPanel Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,6,0,0">
                    <Button x:Name="RefreshBtn" Content="リフレッシュ" Margin="0,0,6,0" Click="RefreshBtn_Click"/>
                    <Button x:Name="MainBtn" Content="メイン" Margin="0,0,6,0" Click="MainBtn_Click"/>
                    <Button x:Name="SubBtn" Content="サブ" Click="SubBtn_Click"/>
                </StackPanel>
            </Grid>

            <!-- 区切り線 -->
            <Border Grid.Row="1"
                    Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    Opacity="0.35"/>

            <!-- 本体 -->
            <Grid Grid.Row="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="8">
                    <ItemsControl x:Name="ItemsCtl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Margin="0,6,0,6"
                                          VerticalAlignment="Top"
                                          Style="{StaticResource ChecklistCheckBoxStyle}"
                                          IsChecked="{Binding IsChecked}">
                                    <CheckBox.Content>
                                        <TextBlock Margin="8,0,0,0"
                                                   FontSize="{DynamicResource ChecklistFontSize}"
                                                   TextWrapping="Wrap"
                                                   Text="{Binding Text}"/>
                                    </CheckBox.Content>
                                </CheckBox>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- 例外表示（本体領域） -->
                <Border x:Name="MessageOverlay"
                        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                        Opacity="0.98"
                        Visibility="Collapsed">
                    <TextBlock x:Name="MessageText"
                               FontSize="14"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="16"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
