<Window x:Class="SidebarChecklist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sidebar Checklist"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        Topmost="True"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- ヘッダ -->
            <DockPanel Margin="8,8,8,6" LastChildFill="True">
                <ComboBox x:Name="ListCombo"
                          Width="220"
                          VerticalAlignment="Center"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          SelectionChanged="ListCombo_SelectionChanged"
                          DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right">
                    <Button x:Name="MainBtn" Content="メイン" Margin="0,0,6,0" Click="MainBtn_Click"/>
                    <Button x:Name="SubBtn" Content="サブ" Click="SubBtn_Click"/>
                </StackPanel>
            </DockPanel>

            <!-- 区切り線 -->
            <Border Grid.Row="1"
                    Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                    Opacity="0.35"/>

            <!-- 本体 -->
            <Grid Grid.Row="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="8">
                    <ItemsControl x:Name="ItemsCtl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Margin="0,6,0,6"
                                          VerticalAlignment="Top"
                                          IsChecked="{Binding IsChecked}">
                                    <CheckBox.Content>
                                        <TextBlock Margin="8,0,0,0"
                                                   TextWrapping="Wrap"
                                                   Text="{Binding Text}"/>
                                    </CheckBox.Content>
                                </CheckBox>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- 例外表示（本体領域） -->
                <Border x:Name="MessageOverlay"
                        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                        Opacity="0.98"
                        Visibility="Collapsed">
                    <TextBlock x:Name="MessageText"
                               FontSize="14"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="16"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
